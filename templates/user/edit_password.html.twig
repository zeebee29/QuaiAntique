{% extends 'base.html.twig' %}

{% block title %}Le quai antique - Modification du mot de passe{% endblock %}

{% block body %}
<div class="bandeau-titre">
    <h1 class="title-page">Modifier mon mot de passe</h1>
</div>
<div class="container">
    <form method="POST">
        <div class="container-user my-2">
            {{ form_start(form) }}
            <div class="col-8 col-md-4 mt-5 mb-3 mx-auto">

                {{ form_row(form.plainPassword) }}
                {{ form_label(form.newPassword.first) }}
                <div class="txt-error">{{ form_errors(form.newPassword.first) }}</div>
                <div class="input-group mb-3">
                {{ form_widget(form.newPassword.first) }}
                <span role="button" class="input-group-text " onclick="togglePassword()">
                    <i id="eye-slash" class="bi bi-eye-slash"></i>
                    <i id="eye" class="bi bi-eye" style="display:none"></i>
                </span>
                </div>
                {{ form_row(form.newPassword.second) }}
              
                {{ form_rest(form) }}
            </div>
            <div class="d-flex mb-5 justify-content-center resa-row-btn">
                <a href="{{ path('homepage') }}" role="button" class="qa-btn m-3">Annuler</a>
                <button type="submit" class="qa-btn m-3">Enregistrer</button>
            </div>
            {{ form_end(form)}}
        </div>
    </form>
</div>

<script src="{{ asset('js/functions.js') }}"></script>

{% endblock %}