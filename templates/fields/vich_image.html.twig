{# admin/field/vich_image.html.twig #}
{% if field.value %}
    {% set html_id = 'ea-lightbox-' ~ field.uniqueId %}
    <a href="#" class="ea-lightbox-thumbnail" data-featherlight="#{{ html_id }}" data-featherlight-close-on-click="anywhere">
        <img src="{{ vich_uploader_asset(entity.instance, 'imageFile', entity.fqcn) }}" alt="{{ entity.name }}" class="img-fluid">
    </a>

    <div id="{{ html_id }}" class="ea-lightbox">
        <img src="{{ vich_uploader_asset(entity.instance, 'imageFile', entity.fqcn) }}" alt="{{ entity.name }}">
    </div>
{% else %}
    <span class="badge badge-secondary">
        Empty
    </span>
{% endif %}